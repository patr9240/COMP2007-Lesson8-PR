@model IEnumerable<COMP2007_Lesson8_PR.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <h2>@ViewBag.SubTitle</h2>
        <p>
            <a href="@Url.Action("Create", "Students")" class="btn btn-success"><i class="fa fa-plus-circle fa-lg"> Add Student</i></a>
        </p>
        <table class="table table-striped table-hover table-bordered table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstMidName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnrollmentDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstMidName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnrollmentDate)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Students", new { id=item.StudentID })" class="btn btn-primary"><i class="fa fa-edit fa-lg"> Edit</i></a>
                        <a href="@Url.Action("Details", "Students", new { id=item.StudentID })" class="btn btn-default"><i class="fa fa-eye fa-lg"> Details</i></a>
                        <a href="@Url.Action("Delete", "Students", new { id=item.StudentID })" class="btn btn-danger"><i class="fa fa-trash fa-lg"> Delete</i></a>



                    </td>
                </tr>
            }

        </table>
    </div>
</div>